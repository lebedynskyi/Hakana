<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionBarTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppActionBarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/transparent_back_arrow</item>
        <item name="android:selectableItemBackground">@drawable/action_bar_active_item_bg</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_active_item_bg</item>
    </style>


    <style name="AppActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_bg_color</item>
    </style>

    <style name="DrawerButton" parent="android:style/Widget.Button">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/drawer_menu_button_text_selector</item>
        <item name="android:background">@drawable/drawer_menu_button_bg_selector</item>
    </style>
</resources>